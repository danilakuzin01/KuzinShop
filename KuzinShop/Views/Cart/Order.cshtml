@model Order

<div class="container mt-5 text-center">
    <div class="alert alert-success" role="alert">
        <h2 class="mb-3">Спасибо за заказ!</h2>
        <p class="mb-0">Ваш заказ был успешно оформлен. Мы свяжемся с вами в ближайшее время.</p>
    </div>

    <div class="card shadow-sm p-4 mb-5">
        <h4 class="card-title mb-4">Информация о заказе</h4>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <strong>Имя:</strong> @Model.Name
            </li>
            <li class="list-group-item">
                <strong>Адрес доставки:</strong> @Model.Address
            </li>
            <li class="list-group-item">
                <strong>Номер телефона:</strong> @Model.Phone
            </li>
        </ul>
    </div>

    <div class="card shadow-sm p-4">
        <h4 class="card-title mb-4">Состав заказа</h4>
        <ul class="list-group list-group-flush">
            @foreach (var cartItem in Model.Cart.Products)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>@cartItem.Product.Publisher</strong>: @cartItem.Product.Name x @cartItem.Count
                    </div>
                    <span>@cartItem.Sum руб</span>
                </li>
            }
        </ul>
        <div class="mt-4 text-end">
            <h4><strong>ИТОГО:</strong> @Model.Cart.GetSum() руб</h4>
        </div>
    </div>

    <a href="/" class="btn btn-primary mt-5">
        <i class="fa-solid fa-arrow-left"></i> На главную
    </a>
</div>
