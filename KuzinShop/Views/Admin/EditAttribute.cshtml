@model KuzinShop.Models.ViewModels.EditAttributeViewModel

<h2>Update Attribute</h2>

<form asp-controller="Attributes" asp-action="UpdateAttribute" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DataType" class="form-label">Data Type</label>
        <input asp-for="DataType" class="form-control" />
        <span asp-validation-for="DataType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Measure" class="form-label">Measure</label>
        <input asp-for="Measure" class="form-control" />
        <span asp-validation-for="Measure" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Categories</label>
        @foreach (var category in Model.Categories)
        {
            <div class="form-check">

                @if (Model.SelectedCategoryIds.Contains(category.Id)){
                    <input class="form-check-input" type="checkbox" asp-for="SelectedCategoryIds" value="@category.Id" checked />
                } else{
                    <input class="form-check-input" type="checkbox" asp-for="SelectedCategoryIds" value="@category.Id" />
                }
                <label class="form-check-label">@category.Name</label>
            </div>
        }
        <span asp-validation-for="SelectedCategoryIds" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
