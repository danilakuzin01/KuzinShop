@model List<CategoryModel>

<!-- Кнопка добавления нового продукта -->
<div class="text-center mt-4">
    <a asp-controller="Admin" asp-action="CreateCategory" class="btn btn-primary">➕ Добавить категорию</a>
</div>
<h2 class="mt-5">📦 Последние добавленные продукты</h2>
<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>#</th>
            <th>Название</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>

                        <form method="get" action="@Url.Action("EditCategory", "Admin", new { id = category.Id })" style="display: inline-block; margin-left: 10px;">
                            <button type="submit" class="btn btn-sm btn-warning">✏️ Редактировать</button>
                        </form>

                        <form method="post" action="@Url.Action("DeleteCategory", "Admin", new { id = category.Id })" style="display: inline-block; margin-left: 10px;">
                            <button type="submit" class="btn btn-sm btn-danger">🗑️ Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">Нет доступных продуктов</td>
            </tr>
        }
    </tbody>
</table>