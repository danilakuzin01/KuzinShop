@model KuzinShop.Models.ViewModels.CreateAttributeViewModel

@{
    ViewData["Title"] = "Создать атрибут";
}

<h2>Создать атрибут</h2>

<form asp-action="CreateAttribute" method="post">
    <div class="form-group">
        <label asp-for="Name" class="form-label">Название атрибута</label>
        <input asp-for="Name" class="form-control" placeholder="Введите название атрибута" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataType" class="form-label">Тип данных</label>
        <select asp-for="DataType" class="form-control">
            <option value="">Выберите тип данных</option>
            <option value="string">Строка</option>
            <option value="int">Число</option>
            <option value="date">Дата</option>
        </select>
        <span asp-validation-for="DataType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Measure" class="form-label">Единица измерения</label>
        <input asp-for="Measure" class="form-control" placeholder="Введите единицу измерения (необязательно)" />
        <span asp-validation-for="Measure" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category" class="form-label">Категория</label>
        <select asp-for="Category.Id" asp-items="ViewBag.Categories" class="form-control">
            <option value="">Выберите категорию</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
